<div class="login-container">
  <div class="login-card">
    <%= link_to image_tag("square_logo.png", class:"logo"), '/' %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'login-form' }) do |f| %>
      <div class="field">
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-text' %>
      </div>

      <div class="field">
        <%= f.label :password, class: 'form-label' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-text' %>
      </div>

      <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name), class: 'forgot-password-link' %>
      <div class="actions">
        <%= f.submit "ログイン", class: 'primary-btn login-btn' %>
      </div>
    <% end %>
    <%= link_to "アカウントの作成", new_registration_path(resource_name), class: 'sign-up-link' %>
  </div>
</div>
