<div class="sign-up-container">
  <div class="sign-up-card">
    <%= link_to image_tag("square_logo.png", class:"logo"), '/' %>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'sign-up-form' }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class: 'form-label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-text' %>
      </div>

      <div class="field">
        <%= f.label :password, class: 'form-label' %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-text' %>
      </div>

      <div class="actions">
        <%= f.submit "登録", class: 'primary-btn sign-up-btn' %>
      </div>
    <% end %>
    <%= link_to "アカウントをお持ちですか？", new_session_path(resource_name), class: 'login-link' %>
  </div>
</div>
