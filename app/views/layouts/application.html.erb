<!DOCTYPE html>
<html>
  <head>
    <title>RelationshipsMemoV1</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= favicon_link_tag('favicon.ico') %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "views/#{params[:controller]}", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= yield(:js) %>
  </head>

  <body>
    <header>
      <% if user_signed_in? %>
        <%= render partial: "layouts/login_header" %>
      <% elsif current_page?('/') %>
        <%= render partial: "layouts/top_header" %>
      <% end %>
    </header>
    <main>
      <%= yield %>
    </main>
    <footer></footer>
  </body>
</html>
